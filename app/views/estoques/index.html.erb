<p id="notice"><%= notice %></p>

<h1>Estoques</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estoques.each do |estoque| %>
      <tr>
        <td><%= estoque.nome %></td>
        <td><%= link_to 'Ver', estoque %></td>
        <td><%= link_to 'Editar', edit_estoque_path(estoque) %></td>
        <td><%= link_to 'Excluir', estoque, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Estoque', new_estoque_path %> <%= link_to 'Voltar', root_path %>
